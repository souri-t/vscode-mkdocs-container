{
    "name": "MkDocs PlantUML Japanese Environment",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "jebbs.plantuml",
                "stkb.rewrap",
                "tamasfe.even-better-toml",
                "esbenp.prettier-vscode"
            ]
        }
    },
    "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
    },
    "forwardPorts": [8000],
    "postCreateCommand": "mkdocs --version",
	"remoteUser": "root",
	"shutdownAction": "stopContainer",
	"runArgs": ["--rm"]
}
